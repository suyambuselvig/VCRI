@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<VCRI.Models.Login>
@using GridMvc.Html;
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
    <title>Index</title>
</head>
<body>
    <div style="width:500px;">
        
        @Html.Grid(Model).Columns(columns => 
                    {
                       
          columns.Add(c => c.userid).Titled("User ID");
          columns.Add(c => c.username).Titled("Name").Filterable(true);
          columns.Add(c => c.role).Titled("Role");
columns.Add().Sanitized(false).Encoded(false).RenderValueAs(o => Html.ActionLink("Delete", "Delete", "Login", new { userid = o.userid.Trim() }, new { }).ToHtmlString());
                     
                    }).WithPaging(3).Sortable(true)
    </div>
     <button value="createuser" name="Create New User" onclick="location.href='@Url.Action("Create","Login")'" >Create User</button>
</body>
</html>


       
         
