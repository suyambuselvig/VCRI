@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<VCRI.Models.Transaction>
@using GridMvc.Html;
   
<html>
  <head>
    <meta name="viewport" content="width=device-width" />
    <script src="@Url.Content("~/Scripts/angular.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
     <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
      @if(TempData["msg"]!=null)
       {
     <script type="text/javascript">
         $(function () {
             alert('@(TempData["msg"])');
         });
         </script>
      }


 </head>
<body>
    <div style="width:500px;">
        
        @Html.Grid(Model).Columns(columns =>
   {

       columns.Add(c => c.drugname).Titled("Drug Code").Filterable(true);
       columns.Add(c => c.Drug_Count).Titled("Drug Count");
       columns.Add(c => c.uname).Titled("Sold By");
       columns.Add(c => c.Sold_Datetime).Titled("Date and Time of Sale").Format("{0:dd/MM/yyyy hh:mm tt}");
       columns.Add(c => c.Comment).Titled("Comments");


       //columns.Add().Sanitized(false).Encoded(false).RenderValueAs(o => Html.ActionLink("Delete", "Delete", "Transaction", new { transactid = o.TransactionID.Trim() }, new { onclick = "return confirm('Are you sure?');" }).ToHtmlString());
       //columns.Add().Sanitized(false).Encoded(false).RenderValueAs(o => Html.ActionLink("Edit", "Edit", "Transaction", new { transactid = o.TransactionID.Trim() }, new { }).ToHtmlString());

   }).WithPaging(3).Sortable(true)
    </div>
     <button value="createtransaction" name="Create New" onclick="location.href='@Url.Action("Create","Transaction")'" >Create New</button>
     <button value="home" name="home" onclick="location.href='@Url.Action("Index","Employee")'" >Back to Home</button>
</body>
</html>


       
         
